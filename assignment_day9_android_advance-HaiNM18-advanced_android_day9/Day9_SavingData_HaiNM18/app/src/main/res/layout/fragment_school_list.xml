<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="gst.trainingcourse.day9_savingdata_hainm18.ui.viewmodels.SchoolListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/google_blue"
            app:layout_constraintBottom_toTopOf="@+id/rcvSchool"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_student_24"
                app:layout_constraintBottom_toTopOf="@id/txtStudentNumber"
                app:layout_constraintEnd_toEndOf="@id/btnInsertStudent"
                app:layout_constraintStart_toStartOf="@id/btnInsertStudent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_school_24"
                app:layout_constraintBottom_toTopOf="@id/txtSchoolNumber"
                app:layout_constraintEnd_toEndOf="@id/btnInsertSchool"
                app:layout_constraintStart_toStartOf="@id/btnInsertSchool"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtStudentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.schoolsState.second.toString()}"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/btnInsertStudent"
                app:layout_constraintEnd_toEndOf="@id/btnInsertStudent"
                app:layout_constraintStart_toStartOf="@id/btnInsertStudent"
                app:layout_constraintTop_toBottomOf="@id/imageView2" />

            <TextView
                android:id="@+id/txtSchoolNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.schoolsState.first.toString()}"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/btnInsertSchool"
                app:layout_constraintEnd_toEndOf="@id/btnInsertSchool"
                app:layout_constraintStart_toStartOf="@id/btnInsertSchool"
                app:layout_constraintTop_toBottomOf="@id/imageView1" />

            <Button
                android:id="@+id/btnInsertStudent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/button_insert_student"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnInsertSchool"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStudentNumber" />

            <Button
                android:id="@+id/btnInsertSchool"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/button_insert_school"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnInsertStudent"
                app:layout_constraintTop_toBottomOf="@id/txtSchoolNumber" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSchool"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topPanel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>